- model_class = Car
.page-header
  %h1 Recorded Vehicles
%table.table.table-striped
  %thead
    %tr
      %th
        %i.icon-exclamation
        Assoc. Incident
      %th
        %i.icon-truck
        Make
      %th
        %i.icon-tint
        Colour
      %th
        %i.icon-barcode
        Licence plate
      %th
        %i.icon-user
        Driver
      %th
        %i.icon-info
        Details
  %tbody
    - @cars.each do |car|
      %tr
        %td= link_to car.incident.short_name, incident_path(car.incident)
        %td= car.make
        %td= car.color
        %td= car.license_plate
        %td= car.driver_name
        %td= link_to "See vehicle details", car_path(car)
