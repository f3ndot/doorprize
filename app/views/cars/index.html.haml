- model_class = Car
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:make)
      %th= model_class.human_attribute_name(:color)
      %th= model_class.human_attribute_name(:license_plate)
      %th= model_class.human_attribute_name(:damage)
      %th= model_class.human_attribute_name(:incident_id)
      %th= model_class.human_attribute_name(:driver_name)
      %th= model_class.human_attribute_name(:driver_contact)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cars.each do |car|
      %tr
        %td= link_to car.id, car_path(car)
        %td= car.description
        %td= car.make
        %td= car.color
        %td= car.license_plate
        %td= car.damage
        %td= car.incident_id
        %td= car.driver_name
        %td= car.driver_contact
        %td=l car.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_car_path(car), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), car_path(car), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_car_path, :class => 'btn btn-primary'
