- model_class = PopulationCentre
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:province)
      %th= model_class.human_attribute_name(:latitude)
      %th= model_class.human_attribute_name(:longitude)
      %th= model_class.human_attribute_name(:rank)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @population_centres.each do |population_centre|
      %tr
        %td= link_to population_centre.id, population_centre_path(population_centre)
        %td= population_centre.city
        %td= population_centre.province
        %td= population_centre.latitude
        %td= population_centre.longitude
        %td= population_centre.rank
        %td=l population_centre.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_population_centre_path(population_centre), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), population_centre_path(population_centre), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_population_centre_path, :class => 'btn btn-primary'
