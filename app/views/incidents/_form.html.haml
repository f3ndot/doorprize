= form_for @incident, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :datetime_of_incident, :class => 'control-label'
    .controls
      = f.text_field :datetime_of_incident, :class => 'text_field'
  .control-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .control-group
    = f.label :injured, :class => 'control-label'
    .controls
      = f.text_field :injured, :class => 'text_field'
  .control-group
    = f.label :police_report_number, :class => 'control-label'
    .controls
      = f.text_field :police_report_number, :class => 'text_field'
  .control-group
    = f.label :video, :class => 'control-label'
    .controls
      = f.text_field :video, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), incidents_path, :class => 'btn'
